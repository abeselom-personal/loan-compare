{
    "name": "api-server-nodejs",
    "version": "1.0.0",
    "description": "RESTful back-end for Node.js and Express.js",
    "license": "Commercial",
    "author": "AppSeed.us",
    "main": "src/index",
    "build": {
        "yarn": "v16.13.0,v17.0.0,v18.0.0"
    },
    "scripts": {
        "start": "pm2 start production.config.json",
        "start-no-daemon": "pm2 start production.config.json --no-daemon",
        "start-node": "node build/index.js",
        "dev": "ts-node-dev src/index.ts",
        "test": "jest -i --colors --verbose --detectOpenHandles",
        "lint": "eslint src --ext .ts",
        "build": "tsc -p tsconfig.build.json",
        "typecheck": "tsc --noEmit",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "update-role": "ts-node-dev src/update-role.ts"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "bcrypt": "5.0.1",
        "compression": "^1.7.5",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^10.0.0",
        "express": "^4.21.2",
        "express-passport-logout": "^0.1.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^8.5.1",
        "mysql": "^2.18.1",
        "node-fetch": "^2.7.0",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.1",
        "pm2": "^5.4.3",
        "sqlite3": "5.0.2",
        "typeorm": "0.2.34"
    },
    "devDependencies": {
        "@types/bcrypt": "5.0.0",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.18.124",
        "@types/node-fetch": "^2.6.12",
        "@types/passport-jwt": "^3.0.13",
        "@types/sqlite3": "3.1.7",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-plugin-import": "^2.31.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.2.5",
        "ts-node": "10.8.0",
        "ts-node-dev": "2.0.0",
        "typescript": "^4.9.5"
    }
}
